ul.media-grid.wide-container
  each project, slug in public.projects._data
    if project.published !== false && (limit > 0 || typeof(limit)=='undefined')
      if limit
        - limit--
      li.media-grid-item
        a.media(href="/projects/#{ slug }")
          img.media-image(src="/images/#{ slug }/thumbnail/#{ project.opening.teaser }")
          if project.description
            .media-caption
              h4.media-caption-header!= project.tagline
              p!= project.description

if limit == 0 && more !== false
  .media-more
    a(href="/projects")
      strong See more of our work
      p We design and engineer software for the web.