
#blog.section
  .container
    .row
      .span12
        h2 Blog &amp; Social
          .btt <a href="#header">Top</a>
    .row
      .span8
        h3 Updates
        each article in articles
          div.article-excerpt
            h3
              a(href="/blog/#{ article.slug }")= article.title
            span by&nbsp;
            = article.author
            &nbsp;|&nbsp;
            a(href="/blog/#{ article.slug }")= article.date     
      .span4
        h3 Twitter
        script(charset="utf-8", src="http://widgets.twimg.com/j/2/widget.js")
        script
          new TWTR.Widget({
            version: 2,
            type: 'profile',
            rpp: 5,
            interval: 30000,
            width: 'auto',
            height: 300,
            theme: {
              shell: {
                background: '#ffffff',
                color: '#333333'
              },
              tweets: {
                background: '#ffffff',
                color: '#333333',
                links: '#333333'
              }
            },
            features: {
              scrollbar: false,
              loop: false,
              live: false,
              behavior: 'all'
            }
          }).render().setUser('chloi_inc').start();