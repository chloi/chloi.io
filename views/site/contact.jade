#contact.section.contact
  .container
    .row
      .span12
        h2 Contact Us
    .row          
      .span7
        iframe.map(width='100%', height='400', frameBorder='0', src='http://a.tiles.mapbox.com/v3/sintaxi.map-hi5mm7hk.html#14.00/49.2839/-123.1164', class="map")
      .span5
        #alert
          h3.contact-form-title Have a project in mind?
        form.messages(method='post', action='/messages')
          label(for='message_name') Name
          input.span5(type='text', name='name', id='message_name')

          label(for='message_email') Email
          input.span5(type='text', name='email', id='message_email')

          label(for='message_body') Message
          textarea.span5(name='body', id='message_body')

          button.btn.btn-large.btn-danger.pull-right Send